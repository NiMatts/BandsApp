@model BandsApp.Web.Models.Band

<!DOCTYPE html>
<html>
<head>
    <title>Band</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="h-100vh bg-dark text-light">
    <div class="container mx-auto my-5">
    <h2 class="text-center mb-3">@Model.Name</h2>
    <p>@Model.Description</p>

    <h3>Albums</h3>
    <ul>
        
        @foreach (var album in Model.Albums)
        {
        <li>@album.Name</li>    
        }
    </ul>

    <div class=" mb-5">
        <img width = "250px"   src="~/Images/@Model.ImageUrl" alt="@Model.Name" />
    </div>
    <div>
        <iframe width="560" height="315" src="@Model.YouTubeUrl"
            title="YouTube video player" frameborder="0" allow="accelerometer; autoplay;
            clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
    </div>
    </body>
    </html>
